Program B_3;{решение уравнения метод половинного}
            {деления}
Var x,a,b,e,y1,y2,y3:real;

Function  f(x:real):real;
begin
 f:=sqr(x)+exp(-x)-2;              {функция F(x)}
end;

BEGIN
 a:=1;                  {задаем начало интервала}
 b:=2;                   {задаем конец интервала}
 e:=0.0001;                  {задаем погрешность}
 y1:=f(a); y2:=f(b);
 if y1*y2>0 then exit;   {на интервале корня нет}
 Repeat
  x:=(a+b)/2;     {определение середины инервала}
  y3:=f(x);
  if y1*y3<0
   then b:=x      {передвигаем точку В в точку Х}
   else
    begin
     a:=x;y1:=y3; {передвигаем точку А в точку Х}
    end
 Until abs(f(x))<=e;
writeln('Kорень уравнения равен : ',x:10:4);
END.