Uses crt;
Var
   x,xn,xk,h,y,
   k1, k2, k3, k4 : real;
   i: integer;
Begin
     clrscr;
     writeln('Программа решения дифференциального уравнения методом Рунге - Кутта');
     writeln( 'Результаты решения:');
{Задаются начальные данные}
     xn:= -0.1; xk:=0.2; h:=0.05;
{Определяются начальные значения переменных}
     x:= xn; y:= 0.02; i:= 0;
     repeat
           x:= x+h; i:=i+1;
           {Расчет коэффициентов Ki}
           k1:= h * (x + SIN(x));
           k2:= h * ((x + h / 2) + SIN(x + h / 2));
           k3:= h * ((x + h / 2) + SIN(x + h / 2));
           k4:= h * ((x + h) + SIN(x + h));
           {Расчет текущего значения решения уравнения}
           y:= y + (k1 + 2 * k2 + 2 * k3 + k4) / 6;
           {Вывод результатов расчета}
           writeln('X = ', x:6:2, ';   Y(', i, ')=', y:6:2);
           {Выход из цикла в случае достижения переменной x конца диапазона}
     until (x > xk)
End.

