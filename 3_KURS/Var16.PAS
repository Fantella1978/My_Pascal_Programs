{СОРТИРОВКА МАССИВА любым МЕТОДОМ
В ДАНН. ПРОГЕ РЕАЛИЗОВ. МЕТОД ВЫБОРКИ}
Uses crt;
Var
   i,j:integer;
   X: array [1..1000] of real;
   T:real;
   f:text;

Begin
     assign(f, 'gen_array.dat');
     rewrite(f);
     clrscr;
     {генерация в цикле сл. знач-ий, заполняем
                'x и выв. знач-я его эл-тов в файл
                Диапазон [-10,120]}
     Randomize;
     for i:=1  to 1000 do
         begin
              x[i]:= -10+random(130);  {(random(x1+|x1|+|x2|)}
              writeln(f, 'X(',i,')=', X[i]:6:2, ';');
         end;
     close(f);

     {дальше-непосредственно сортировка}
     Writeln('Жди. Идет сортировка');
     for i:= 1 to 999 do {идем по массиву сверху вниз с 1-го элемента
                           -до предпоследнего}
        for j:= 1000 downto i+1 do
                        {идем снизу-вверх до того элемента,ко-  -
                        торый мы выбираем, идя сверху-вниз}
           if (x[i] > x[j]) then {если i-й > j-го, то                   }
           begin
                T:=x[i]; x[i]:=x[j]; x[j]:=T;
                         {меняем их содержимое местами через Т}
           end;          {выбираем следующее j}
                         {выбираем следующее i}
     {Так что массив отсортирован по возрастанию
     Если скажет отсортировать по убыванию -
     меняйте знак ">" на "<"
     А теперь выв. результат:}
     assign(f, 'sort_array.dat');
     rewrite(f);
     writeln( f, 'Результат сортировки:');
     FOR i:= 1 TO 1000 do
         writeln(f, 'X(',i,')=', X[i]:6:2, ';');
     {Закрыаем файл-заканчиваем работу с ним}
     close(f);
End.

