Uses crt;
Var
   x,y : array[0..999] of real;
   x_, y_, xy_, dx_, dy_, Gx_, Gy_, k_ :real;
   i, n: integer;
Begin
     clrscr;
     writeln('Данная программа производит статистическую обработку массивов.');
     write('Введите количество элементов массива X(n) = ');
     read(n);
     {Инициализация массивов}
     {Инициализация генератора случайных чисел.}
     Randomize;
     {Обнуление переменных, для расчета средних значений (мат. ожиданий)
     массивов x(n),y(n) и для расчета коэффициента корелляции}
     x_:= 0; y_:= 0; xy_:= 0; dx_:=0;
     for i:= 1 to n do
       begin
          {Генерация элементов массива x(n) и расчет элементов массива y(n)}
          x[i]:= random + (-0.5);
          y[i]:= 12 * x[i] + 21;
          {Суммирование элементов массивов для нахождения их средних значений}
          x_:= x_ + x[i];
          y_:= y_ + y[i];
          {Суммирование произведений элементов массивов для расчета
          коэффициента корелляции}
          xy_:= xy_ + x[i] * y[i];
          {Вывод массивов на экран}
          write('X(', i, ')=', x[i]:6:2, '       ');
          writeln('Y(', i, ')=', y[i]:6:2)
     end;
     {Расчет средних значений массивов x(n),y(n)}
     x_:= x_ / n;
     y_:= y_ / n;
     {Расчет дисперсий для массивов x(n),y(n)}
     for i:= 1 to n do
     begin
          dx_:= dx_ + (x[i]-x_)*(x[i]-x_);
          dy_:= dy_ + (y[i] - y_)*(y[i] - y_)
     end;
     dx_:= dx_ / n;
     dy_:= dy_ / n;
     {Расчет среднеквадратичного отклонения для массивов x(n),y(n)}
     Gx_:= SQR(dx_);
     Gy_:= SQR(dy_);
     {Расчет среднего значения произведений элементов массивов x(n),y(n),
     необходимого для расчета коэффициента корелляции}
     xy_:= xy_ / n;
     {Расчет коэффициента корелляции}
     k_:= (xy_ - x_ * y_) / (Gx_ * Gy_);
     {Вывод расчетных данных}
     writeln('Вывод расчетных данных');
     writeln('Mx = ', x_:6:2);
     writeln('My = ', y_:6:2);
     writeln('Dx = ', dx_:6:2);
     writeln('Dy = ', dy_:6:2);
     writeln('Gx = ', Gx_:6:2);
     writeln('Gy = ', Gy_:6:2);
     writeln('K = ', k_:6:2);
End.
