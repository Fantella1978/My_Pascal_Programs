Program var12;
uses crt;
{Суть метода:
Опред. шаг dx=(a-b)/n,a и b -пределы интегрирования,
n- кол-во разбиений;
проводим линии в точках разбиения;
строим на этих линиях прямоугольники, используя линии
как стороны.Если при этом прямоугольник рисовать
вправо от пересечения линии и прямой - метод
левых прямоугольников(хотя слева не прямоуг.,а линия)
если влево - то правых прямоугольников (парадокс)
}
const a=1;b=0;
      n=20;
var IR,IL,dx,DI:real;
    i:integer;
begin
  clrscr;
  writeln('Oпределенный интеграл f(x)=e^(-(x^2))');
  writeln('методами левых и правых прямоугольников');
  writeln('в интервале 0 - 1');
  dx:=(a-b)/n;
  IR:=0;
  IL:=0;
  for i:=1 to n do
    begin
      IL:=IL+dx*exp(-(sqr(0+dx*(n-1))));
      IR:=IR+dx*exp(-(sqr(0+dx*n)));
    end;
  writeln('Результаты:');
  writeln('По методу левых  I=',IL:7:4);
  writeln('По методу правых I=',IR:7:4);
  DI:=abs(IL-IR);
  writeln('Разность значений = ',DI:8:5);
  readln;
end.